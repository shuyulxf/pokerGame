        app:layout_constraintLeft_toRightOf="@id/opArea4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/border">
    </View>
    <View
        android:id="@+id/opArea6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:10"
        app:layout_constraintHeight_percent="0.35"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/opArea5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/border">
    </View>
    <View
        android:id="@+id/opArea7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:10"
        app:layout_constraintHeight_percent="0.35"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/opArea6"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/border">
    </View>
</androidx.constraintlayout.widget.ConstraintLayout>