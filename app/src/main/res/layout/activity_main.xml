<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="horizontal"
    android:paddingHorizontal="15dp"
    android:paddingVertical="15dp"
    tools:context=".MainActivity">
    <View
        android:id="@+id/baseArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:10"
        app:layout_constraintHeight_percent="0.42"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border">
    </View>
    <View
        android:id="@+id/place4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:10"
        app:layout_constraintHeight_percent="0.42"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border">
    </View>
    <View
        android:id="@+id/place3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:10"
        app:layout_constraintHeight_percent="0.42"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@id/place4"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border">
    </View>
    <View
        android:id="@+id/place2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:10"
        app:layout_constraintHeight_percent="0.42"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@id/place3"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border">
    </View>
    <View
        android:id="@+id/place1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:10"
        app:layout_constraintHeight_percent="0.42"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@id/place2"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border">
    </View>
    <View
        android:id="@+id/opArea1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:10"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/border">
    </View>
    <View
        android:id="@+id/opArea2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:10"
        app:layout_constraintHeight_percent="0.35"
