        app:layout_constraintLeft_toRightOf="@id/opArea1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/border">
    </View>
    <View
        android:id="@+id/opArea3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:10"
        app:layout_constraintHeight_percent="0.35"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/opArea2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/border">
    </View>
    <View
        android:id="@+id/opArea4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:10"
        app:layout_constraintHeight_percent="0.35"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/opArea3"
